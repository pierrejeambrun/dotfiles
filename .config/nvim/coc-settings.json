{
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    // "javascript",
    // "javascriptreact",
    // "typescript",
    // "typescriptreact",
    "html"
  ],
  "suggest.noselect": true,
  // Python
  "python.pythonPath": "~/.config/nvim/python_path.sh",
  "python.formatting.provider": "black",
  "pyright.inlayHints.enable": false,
  "pyright.testing.provider": "pytest",
  "python.sortImports.path": "isort",
  "pyright.disableDiagnostics": true,
  "python.linting.flake8Enabled": true,
  "python.linting.mypyEnabled": true,
  "python.analysis.diagnosticMode": "workspace",
  // Jinja
  "htmldjango.djlint.indent": 2,
  "htmldjango.djhtml.tabWidth": 2,
  // Js Ts (Eslint, Prettier)
  "eslint.format.enable": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  // "prettier.formatterPriority": -1
  "prettier.enable": false,
  "cSpell.userWords": [
    "djhtml",
    "djlint",
    "enabled",
    "htmldjango",
    "isort",
    "mypy",
    "noselect",
    "nvim",
    "pyright",
    "pytest"
  ]
}
